{% extends 'base.html.twig' %}

{% block title %}CONTACT{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3">
            <div class="col-8">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-dismissible alert-success mt-4">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{ message }}
                    </div>
                {% endfor %}
                <h2 class="contact-title">Ecrire votre message</h2>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.message) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(form.object) }}
                    </div>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="button button-contactForm boxed-btn">Envoyer</button>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-4 mt-4">
                <div class="media contact-info mt-4">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>ZI, Cité Ettahrir</h3>
                        <p>3263 Tataouine, Tunisie</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>75 870 338</h3>
                        <p>Lundi à Samedi : 8h -> 17h</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3> info@sepjt.tn</h3>
                        <p>Envoyez-nous votre message à tout moment!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
